<Window x:Class="Encriptar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Encriptar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Login:" HorizontalAlignment="Left" Margin="135,35,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUser" HorizontalAlignment="Left" Height="23" Margin="135,77,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="135,116,0,0" VerticalAlignment="Top" Width="122" Height="27"/>
        <Button x:Name="btnEncriptar" Content="Encriptar" HorizontalAlignment="Left" Margin="135,163,0,0" VerticalAlignment="Top" Width="75" Click="BtnEncriptar_Click"/>
        <Label x:Name="lblEncriptado" Content="Encriptado" HorizontalAlignment="Left" Margin="401,77,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnValida" Content="Válidame" HorizontalAlignment="Left" Margin="252,163,0,0" VerticalAlignment="Top" Width="75" Click="BtnValida_Click"/>

    </Grid>
</Window>
