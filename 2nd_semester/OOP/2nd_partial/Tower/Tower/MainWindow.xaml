<Window x:Class="Tower.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tower"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Canvas x:Name="elCanvitas" HorizontalAlignment="Left" Height="359" VerticalAlignment="Top" Width="792"/>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="21,379,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnReset" Content="Reset" HorizontalAlignment="Left" Margin="148,379,0,0" VerticalAlignment="Top" Width="75" Click="BtnReset_Click"/>
        <ComboBox x:Name="cbdisk" HorizontalAlignment="Left" Margin="246,379,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0" SelectionChanged="Cbdisk_SelectionChanged">
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="6"/>
            <ComboBoxItem Content="7"/>
            <ComboBoxItem Content="8"/>
        </ComboBox>

    </Grid>
</Window>
