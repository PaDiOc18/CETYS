        <Label x:Name="lblEditorial" Content="Editorial: " HorizontalAlignment="Left" Margin="28,246,0,0" VerticalAlignment="Top" Height="30" Width="338" FontFamily="Showcard Gothic"/>
        <Label x:Name="lblAutor" Content="Autor: " HorizontalAlignment="Left" Margin="28,281,0,0" VerticalAlignment="Top" Height="30" Width="338" FontFamily="Showcard Gothic"/>
